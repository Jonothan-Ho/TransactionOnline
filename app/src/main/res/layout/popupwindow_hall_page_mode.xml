<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="1dp"
    android:background="@color/color_grey_bg"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_layout_white_style_one"
        android:drawableLeft="@mipmap/icon_list_page_no_arrow_normal"
        android:gravity="center"
        android:padding="10dp"
        android:text="列表模式" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_grey_light" />

    <TextView
        android:id="@+id/tv_single"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_layout_white_style_one"
        android:drawableLeft="@mipmap/icon_single_page_no_arrow_normal"
        android:gravity="center"
        android:padding="10dp"
        android:text="单页模式" />


</LinearLayout>