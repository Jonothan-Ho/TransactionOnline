<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.maimaizaixian.transactiononline.module.home.ui.fragment.MatchResultMapFragment">

    <com.amap.api.maps2d.MapView
        android:id="@+id/map"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/layout_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/bg_white_shadow_bottom_one_normal"
            android:padding="10dp">

            <com.maimaizaixian.transactiononline.view.CircleImageView
                android:id="@+id/iv_portrait"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="10dp"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_portrait"
                android:text="叶XX"
                android:textColor="@color/color_black_dark"
                android:textSize="@dimen/size_text_16sp" />

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_portrait"
                android:layout_toRightOf="@+id/iv_portrait"
                android:text="收购二手货"
                android:textColor="@color/color_grey_middle"
                android:textSize="@dimen/size_text_16sp" />

            <TextView
                android:id="@+id/tv_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="200M"
                android:textColor="@color/color_grey_middle"
                android:textSize="@dimen/size_text_16sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_last"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/selector_layout_bg_white_shadow_bottom"
                android:gravity="center"
                android:padding="10dp"
                android:text="上一页"
                android:textSize="@dimen/size_text_16sp" />

            <TextView
                android:id="@+id/tv_next"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/selector_layout_bg_white_shadow_bottom"
                android:gravity="center"
                android:padding="10dp"
                android:text="下一页"
                android:textSize="@dimen/size_text_16sp" />

        </LinearLayout>


    </LinearLayout>
</RelativeLayout>
