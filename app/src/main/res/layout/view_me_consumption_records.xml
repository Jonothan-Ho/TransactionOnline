<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white_pure"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="消费"
            android:textColor="@color/color_black_dark"
            android:textSize="@dimen/size_text_16sp" />

        <TextView
            android:id="@+id/tv_records"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/text1"
            android:text="1"
            android:textColor="@color/color_red_peach"
            android:textSize="@dimen/size_text_16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_records"
            android:text="元"
            android:textColor="@color/color_black_dark"
            android:textSize="@dimen/size_text_16sp" />


        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text1"
            android:layout_marginTop="10dp"
            android:text="求购红木家具"
            android:textColor="@color/color_normal_text"
            android:textSize="@dimen/size_text_14sp" />


        <ImageView
            android:id="@+id/image1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_arrow_right" />


        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/image1"
            android:gravity="center"
            android:text="2015-9-15\n10:25"
            android:textColor="@color/color_normal_text"
            android:textSize="@dimen/size_text_14sp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>