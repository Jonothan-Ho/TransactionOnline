<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white_pure"
    android:orientation="vertical"
    android:padding="10dp">

    <com.maimaizaixian.transactiononline.view.CircleImageView
        android:id="@+id/iv_portrait"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginRight="10dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/iv_portrait"
        android:text="叶XX"
        android:textColor="@color/color_black_dark"
        android:textSize="@dimen/size_text_16sp" />

    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_portrait"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@+id/iv_portrait"
        android:text="13214528524"
        android:textColor="@color/color_black_dark"
        android:textSize="@dimen/size_text_16sp" />


    <Button
        android:id="@+id/btn_invite"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/selector_layout_green_style_one"
        android:text="邀请"
        android:textColor="@color/color_white_pure"
        android:textSize="@dimen/size_text_16sp" />

</RelativeLayout>