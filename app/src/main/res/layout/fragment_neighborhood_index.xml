<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white_pure"
    android:orientation="vertical"
    tools:context="com.maimaizaixian.transactiononline.module.neighborhood.NeighborhoodIndexFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <EditText
            android:id="@+id/edit_query"
            android:layout_width="250dp"
            android:layout_height="36dp"
            android:layout_marginRight="10dp"
            android:layout_centerInParent="true"
            android:background="@mipmap/bg_input_style_one"
            android:drawableLeft="@mipmap/icon_search"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:hint="附近的：酒店、洗脚房"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:paddingLeft="20dp"
            android:textColor="@color/color_normal_text"
            android:textColorHint="@color/color_grey_middle"
            android:textSize="@dimen/size_text_14sp" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="附近"
            android:textColor="@color/color_black_dark"
            android:textSize="@dimen/size_text_18sp"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/ibtn_mode"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:src="@drawable/selector_btn_list_page_with_arrow_mode" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_grey_light" />

    <FrameLayout
        android:id="@+id/frame_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>
