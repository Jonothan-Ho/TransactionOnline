<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_grey_bg"
    android:orientation="vertical"
    tools:context="com.maimaizaixian.transactiononline.module.neighborhood.ui.DetailsActivity">

    <include layout="@layout/view_title_bar_style_one" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="卖工业品"
                android:textColor="@color/color_black_dark"
                android:textSize="@dimen/size_text_16sp" />


            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/iv_portrait"
                android:text="2015-11-11 11:11"
                android:textColor="@color/color_normal_text"
                android:textSize="@dimen/size_text_14sp" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <com.maimaizaixian.transactiononline.view.AutoScrollViewPager
                    android:id="@+id/viewpager_auto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none" />

                <TextView
                    android:id="@+id/tv_img_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/viewpager_auto"
                    android:layout_alignParentRight="true"
                    android:background="#88000000"
                    android:padding="10dp"
                    android:text="4张"
                    android:textColor="@color/color_white_pure"
                    android:textSize="@dimen/size_text_16sp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="商品详情"
                android:textColor="@color/color_normal_text"
                android:textSize="@dimen/size_text_14sp" />

        </LinearLayout>

    </ScrollView>


</LinearLayout>
