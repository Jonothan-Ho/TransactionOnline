<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardElevation="2dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="需求名称"
                android:textColor="@color/color_black_dark"
                android:textSize="@dimen/size_text_18sp" />


            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="5dp"
                android:text="2015-09-09 15:00"
                android:textColor="@color/color_normal_text"
                android:textSize="@dimen/size_text_14sp" />

        </RelativeLayout>


        <TextView
            android:id="@id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="文艺复兴文艺复兴文艺复兴文艺复兴文艺复兴文艺复兴文艺复兴文艺复兴文艺复兴"
            android:textColor="@color/color_normal_text"
            android:textSize="@dimen/size_text_16sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:scrollbars="none" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="四川 成都"
                android:textColor="@color/color_normal_text"
                android:textSize="@dimen/size_text_14sp" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="5dp"
                android:text="已支付"
                android:textColor="@color/color_main"
                android:textSize="@dimen/size_text_14sp" />

        </RelativeLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>