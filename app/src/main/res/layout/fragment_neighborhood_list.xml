<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_grey_bg"
    android:orientation="vertical"
    tools:context="com.maimaizaixian.transactiononline.module.neighborhood.ui.fragment.ListFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/color_grey_light">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="附近商机"
            android:textColor="@color/color_black_dark"
            android:textSize="@dimen/size_text_18sp" />

        <Button
            android:id="@+id/btn_action"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/selector_btn_green_style_one"
            android:text="发布新商机"
            android:textColor="@color/color_white_pure" />

    </RelativeLayout>

    <include layout="@layout/layout_recycler_view_style_one" />

</LinearLayout>
