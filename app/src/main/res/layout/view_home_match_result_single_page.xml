<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_card"
    android:orientation="vertical">

    <com.maimaizaixian.transactiononline.view.CircleImageView
        android:id="@+id/iv_image"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:padding="5dp"
        android:text="叶良辰"
        android:textColor="@color/color_black_dark"
        android:textSize="@dimen/size_text_18sp" />

    <TextView
        android:id="@+id/tv_company"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:text="腾讯科技有限公司"
        android:textColor="@color/color_normal_text"
        android:textSize="@dimen/size_text_14sp" />

    <TextView
        android:id="@+id/tv_range"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:text="毒品 军火 核武器"
        android:textColor="@color/color_blue_acid"
        android:textSize="@dimen/size_text_14sp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="四川 成都 150M"
            android:textColor="@color/color_normal_text"
            android:textSize="@dimen/size_text_14sp" />


        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="2015/9/10 12:03"
            android:textColor="@color/color_normal_text"
            android:textSize="@dimen/size_text_14sp" />

    </RelativeLayout>

    <Button
        android:id="@+id/btn_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/selector_btn_green_style_one"
        android:text="查看详情"
        android:textColor="@color/color_white_pure"
        android:textSize="@dimen/size_text_16sp" />

</LinearLayout><!--
</android.support.v7.widget.CardView>-->
